<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_width="match_parent"
    tools:context=".V.Activity.SingleRootActivity"
    android:id="@+id/draver_singleroot"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:background="#e6e6e6"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"

            android:orientation="horizontal"
            android:background="@drawable/banda_tools"
            tools:ignore="MissingConstraints" >
            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                >

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/note_singleroot"
                    android:layout_gravity="center"
                    android:background="@drawable/notes_foreground"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="10dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/plsy_singleroot"
                    android:layout_gravity="center"
                    android:background="@drawable/play_foreground"
                    tools:layout_editor_absoluteX="91dp"
                    tools:layout_editor_absoluteY="10dp" />

                <TextView
                    android:id="@+id/singletextplay"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="Ã—1"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_marginBottom="2dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:id="@+id/notch_singleroot"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/notch_off_"
                    tools:layout_editor_absoluteX="623dp"
                    tools:layout_editor_absoluteY="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:layout_gravity="center"
                >

                <Button

                    android:id="@+id/montage_singleroot"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/banda_tools"
                    android:text="Mono"
                    android:textColorHint="#bbbbbb"
                    tools:ignore="HardcodedText"
                    tools:layout_editor_absoluteX="356dp"
                    tools:layout_editor_absoluteY="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/line_singleroot"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"

                    android:background="@drawable/one_line_foreground"
                    android:layout_marginRight="30dp"
                    tools:layout_editor_absoluteX="201dp"
                    tools:layout_editor_absoluteY="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                >
                <Button

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/zoomout_singleroot"
                    android:background="@drawable/zoom_out_foreground"
                    tools:layout_editor_absoluteX="512dp"
                    tools:layout_editor_absoluteY="10dp" />
                <Button

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/zoomin_singleroot"
                    android:background="@drawable/zoom_in_foreground"
                    tools:layout_editor_absoluteX="512dp"
                    tools:layout_editor_absoluteY="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                >

                <Button

                    android:id="@+id/choiosechannel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/banda_tools"
                    android:hint="CHOOSE"
                    android:textColorHint="#bbbbbb"
                    tools:ignore="HardcodedText"
                    tools:layout_editor_absoluteX="356dp"
                    tools:layout_editor_absoluteY="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/main"
            tools:ignore="MissingConstraints" >
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#e6e6e6"
                android:orientation="horizontal"
                android:gravity="right"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/VS100"
                            android:layout_weight="1"
                            android:text="100" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:id="@+id/VS50"
                            android:text="50"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:id="@+id/VS0"
                            android:text="0"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:id="@+id/VS_50"
                            android:text="-50"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:id="@+id/VS_100"
                            android:text="-100"

                            />

                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>
            <Button
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:id="@+id/singleroot_playline"
                />
            <Button
                android:gravity="right"
                android:layout_width="2dp"
                android:layout_marginStart="3dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
<com.example.myapplication.V.BaseSurfaceSingle

    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:id="@+id/singlesurfaceview"
    />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#e6e6e6"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:gravity="right"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/SS_0"
                    android:text="0"
                    android:layout_weight="1"

                        />


                <TextView
                    android:layout_width="0dp"
                    android:text="1000"
                    android:layout_weight="1"
                    android:id="@+id/SS_1000"
                    android:layout_height="25dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:text="2000"
                    android:id="@+id/SS_2000"

                    android:layout_weight="1"
                    android:layout_height="25dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:text="3000"
                    android:id="@+id/SS_3000"

                    android:layout_weight="1"
                    android:layout_height="25dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:text="4000"
                    android:id="@+id/SS_4000"

                    android:layout_weight="1"
                    android:layout_height="25dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:text="5000"
                    android:id="@+id/SS_5000"

                    android:layout_weight="1"
                    android:layout_height="25dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:text="6000"
                    android:id="@+id/SS_6000"

                    android:layout_weight="1"
                    android:layout_height="25dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:text="7000"
                    android:id="@+id/SS_7000"

                    android:layout_weight="1"
                    android:layout_height="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="8000"
                    android:id="@+id/SS_8000"
                    android:layout_height="25dp"
                    />

            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <fragment
        android:id="@+id/fragment_singleroot"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:name="com.example.myapplication.V.Activity.CustomDrawerLayout"
        tools:layout="@layout/fragment_note"
        app:layout="@layout/fragment_note"
        android:layout_gravity="start"
        android:gravity="start"






        />



</androidx.drawerlayout.widget.DrawerLayout>
