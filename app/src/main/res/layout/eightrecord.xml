<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".V.Activity.EightRecordActivity"
    android:id="@+id/draver_eightrecord"
    >

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical"
    tools:context=".V.Activity.MainActivity"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:background="@drawable/banda_tools"
        tools:ignore="MissingConstraints"
        android:baselineAligned="false">
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/note_eightrecord"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:background="@drawable/notes_foreground"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/record_eightrecord"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:background="@drawable/red_record_drawable"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <ImageView

            android:layout_marginBottom="2dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:id="@+id/notch_eightrecord"
            android:layout_marginEnd="30dp"
            android:background="@mipmap/notch_off_"
            tools:layout_editor_absoluteX="623dp"
            tools:layout_editor_absoluteY="10dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/line_eightrecord"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"

                android:background="@drawable/multi_line_foreground"
                android:layout_marginEnd="30dp"
                tools:layout_editor_absoluteX="201dp"
                tools:layout_editor_absoluteY="10dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:layout_gravity="center"
        >
        <Button
            android:textSize="12sp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/montage_eightrecord"
            android:background="@drawable/banda_tools"
            android:layout_marginEnd="30dp"
            android:text="Mono"
            android:textColorHint="#bbbbbb"
            tools:layout_editor_absoluteX="356dp"
            tools:layout_editor_absoluteY="10dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

        <Button

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/zoomout_eightrecord"
            android:background="@drawable/zoom_out_foreground"
            tools:layout_editor_absoluteX="512dp"
            tools:layout_editor_absoluteY="10dp" />
        <Button

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/zoomin_eightrecord"
            android:background="@drawable/zoom_in_foreground"
            tools:layout_editor_absoluteX="512dp"
            tools:layout_editor_absoluteY="10dp" />
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        >
        <Button

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/replay_eightrecord"
            android:layout_marginEnd="30dp"
            android:background="@drawable/replay_root_foreground"
            tools:layout_editor_absoluteX="512dp"
            tools:layout_editor_absoluteY="10dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            >

        <Button

            android:id="@+id/bluetoooth_eightrecord"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bluetooth_off_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/left_linearlayout"
            android:layout_width="44dp"
            android:orientation="vertical"
            android:background="#e6e6e6"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ch1"
                    android:text="ch1"
                    style="@style/axis_textview_root" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="1">
                <TextView
                    android:id="@+id/ch2"
                    style="@style/axis_textview_root"
                    android:text="ch2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="1">
                <TextView
                    style="@style/axis_textview_root"
                    android:id="@+id/ch3"
                    android:text="ch3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"


                android:layout_weight="1">
                <TextView
                    style="@style/axis_textview_root"
                    android:text="ch4"
                    android:id="@+id/ch4"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="1">

                <TextView
                    style="@style/axis_textview_root"
                    android:text="ch5"
                    android:id="@+id/ch5"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"


                android:layout_weight="1">
                <TextView
                    style="@style/axis_textview_root"
                    android:text="ch6"
                    android:id="@+id/ch6"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"


                android:layout_weight="1">
                <TextView
                    style="@style/axis_textview_root"
                    android:text="ch7"
                    android:id="@+id/ch7"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"


                android:layout_weight="1">
                <TextView
                    style="@style/axis_textview_root"
                    android:text="ch8"
                    android:id="@+id/ch8"
                    />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:id="@+id/eightroot_playline1"
                />


            <Button
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />



            <com.example.myapplication.V.BaseSurfaceEightRecord
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/eightrootsurfaceview"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#e6e6e6"
        android:orientation="vertical"
        android:gravity="right"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/textview0"
                android:layout_width="40dp"
                android:layout_height="25dp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"

                android:id="@+id/SM1_0"
                android:text="0"
                android:layout_weight="1"

                />


            <TextView
                android:layout_width="0dp"
                android:text="1000"
                android:layout_weight="1"
                android:id="@+id/SM1_1000"
                android:layout_height="25dp"
                />

            <TextView
                android:layout_width="0dp"
                android:text="2000"
                android:id="@+id/SM1_2000"

                android:layout_weight="1"
                android:layout_height="25dp"
                />

            <TextView
                android:layout_width="0dp"
                android:text="3000"
                android:id="@+id/SM1_3000"


                android:layout_weight="1"
                android:layout_height="25dp"
                />

            <TextView
                android:layout_width="0dp"
                android:text="4000"

                android:id="@+id/SM1_4000"

                android:layout_weight="1"
                android:layout_height="25dp"
                />
            <TextView
                android:layout_width="0dp"
                android:text="5000"
                android:id="@+id/SM1_5000"


                android:layout_weight="1"
                android:layout_height="25dp"
                />
            <TextView
                android:layout_width="0dp"
                android:text="6000"

                android:id="@+id/SM1_6000"

                android:layout_weight="1"
                android:layout_height="25dp"
                />
            <TextView
                android:layout_width="0dp"
                android:text="7000"
                android:id="@+id/SM1_7000"


                android:layout_weight="1"
                android:layout_height="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="8000"
                android:id="@+id/SM1_8000"


                android:layout_height="25dp"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>

    <fragment
        android:id="@+id/fragment_eightrecord"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:name="com.example.myapplication.V.Activity.CustomDrawerLayout"
        tools:layout="@layout/fragment_note"
        app:layout="@layout/fragment_note"
        android:layout_gravity="start"
        android:gravity="start"






        />
</androidx.drawerlayout.widget.DrawerLayout>
