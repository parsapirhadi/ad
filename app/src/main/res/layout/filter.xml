<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e1e1e1"
    tools:context=".V.Activity.FilterActivity"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#e1e1e1"
        android:orientation="horizontal"


        >
        <Button
            android:layout_margin="10dp"
            android:layout_gravity="center|start"
            android:layout_width="25dp"
            android:background="@drawable/back_pointer_foreground"
            android:layout_height="25dp"
            android:id="@+id/back_pointer_filter"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#929292"
            android:text="NrSign1.0.0"

            />
    </LinearLayout>
    <TextView

        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:text="Filters"
        android:layout_weight="0"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclefilter"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="wrap_content">


    </androidx.recyclerview.widget.RecyclerView>
    <TextView

        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:text="Notch"
        android:layout_weight="0"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclenotch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >


    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>