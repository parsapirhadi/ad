<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".V.Activity.SingleRecordActivity"
    android:layout_width="match_parent"
    android:id="@+id/draver_singlerecord"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:background="#e6e6e6"
        android:orientation="vertical"
        android:layout_height="match_parent">






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:background="@drawable/banda_tools"
                tools:ignore="MissingConstraints"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/note_singlerecord"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/notes_foreground"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <Button
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/record_singlerecord"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/red_record_foreground"
                        tools:layout_editor_absoluteX="91dp"
                        tools:layout_editor_absoluteY="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <ImageView

                        android:layout_marginBottom="2dp"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:id="@+id/notch_singlerecord"
                        android:layout_marginEnd="30dp"
                       tools:layout_editor_absoluteX="623dp"
                        tools:layout_editor_absoluteY="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <Button
                        android:id="@+id/line_singlerecord"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/one_line_foreground"
                        android:layout_marginEnd="30dp"
                        tools:layout_editor_absoluteX="201dp"
                        tools:layout_editor_absoluteY="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_weight="1"
                    android:background="#dcdcdc"
                    android:layout_gravity="center"
                    >
                    <Button
                        android:textSize="12sp"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:id="@+id/montage_singlerecord"
                        android:background="@drawable/banda_tools"
                        android:layout_marginEnd="30dp"
                        android:text="Mono"
                        android:textColorHint="#bbbbbb"
                        tools:layout_editor_absoluteX="356dp"
                        tools:layout_editor_absoluteY="10dp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <Button

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/zoomout_singlerecord"
                    android:background="@drawable/zoom_out_foreground"
                    tools:layout_editor_absoluteX="512dp"
                    tools:layout_editor_absoluteY="10dp" />
                <Button

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/zoomin_singlerecord"
                    android:background="@drawable/zoom_in_foreground"
                    tools:layout_editor_absoluteX="512dp"
                    tools:layout_editor_absoluteY="10dp" />







                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    >
                    <Button

                        android:id="@+id/choise_channel_record"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/banda_tools"
                        android:hint="CHOOSE"
                        android:textColorHint="#bbbbbb"
                        tools:ignore="HardcodedText"
                        tools:layout_editor_absoluteX="356dp"
                        tools:layout_editor_absoluteY="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <Button

                        android:id="@+id/bluetoooth_singlerecord"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_gravity="center"
                        android:background="@drawable/bluetooth_off_foreground"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="10dp" />


                </LinearLayout>
            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/main"
            tools:ignore="MissingConstraints" >
            <LinearLayout
                android:id="@+id/left_linearlayout_singlere"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#e6e6e6"
                android:orientation="horizontal"
                android:gravity="right"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center|top"
                            android:id="@+id/VS100rec"
                            android:layout_weight="1"
                            android:text="100" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center|top"
                           android:layout_weight="1"
                            android:id="@+id/VS50rec"
                            android:text="50"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center|top"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:id="@+id/VS0rec"
                            android:text="0"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"

                            android:gravity="center|top"
                            android:layout_weight="1"
                            android:id="@+id/VS_50rec"
                            android:text="-50"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center|top"
                           android:id="@+id/VS_100rec"
                            android:text="-100"

                            />

                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>


            <Button
                android:gravity="right"
                android:layout_width="2dp"
                android:layout_marginStart="3dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
            <com.example.myapplication.V.BaseSurfaceSingleRecord

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/singlesurfaceviewRecord"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#e6e6e6"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:gravity="right"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_weight="1"
                >




                <TextView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/SS_0rec"
                    android:text="0"

                    tools:ignore="MissingConstraints" />


                <TextView
                    android:layout_width="50dp"
                    android:text="1.0"
                    android:id="@+id/SS_1000rec"
                    android:layout_height="25dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="50dp"

                    android:text="2.0"
                    android:id="@+id/SS_2000rec"

                    android:layout_height="25dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:text="3.0"
                    android:id="@+id/SS_3000rec"

                    android:layout_width="50dp"

                    android:layout_height="25dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="50dp"

                    android:text="4.0"
                    android:id="@+id/SS_4000rec"

                    android:layout_height="25dp"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:text="5.0"
                    android:id="@+id/SS_5000rec"
                    android:layout_width="50dp"

                    android:layout_height="25dp"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:text="6.0"
                    android:id="@+id/SS_6000rec"

                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:text="7.0"
                    android:id="@+id/SS_7000rec"

                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SS_8000rec"
                    android:layout_width="50dp"
                    android:gravity="right"
                    android:layout_height="25dp"
                    android:text="8.0"
                    tools:ignore="MissingConstraints" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <fragment
        android:id="@+id/fragment_singlerecord"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:name="com.example.myapplication.V.Activity.CustomDrawerLayout"
        tools:layout="@layout/fragment_note"
        app:layout="@layout/fragment_note"
        android:layout_gravity="start"
        android:gravity="start"






        />



</androidx.drawerlayout.widget.DrawerLayout>
